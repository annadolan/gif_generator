<% @gifs.each do |gif| %>
<%= link_to image_tag(gif.image_path), gif_path(gif) %>
<p><%= link_to "Delete", gif_path(gif), method: :delete %></p>
  <% if !Favorite.find_by(user_id: current_user.id, gif_id: gif.id) %>
  <p><%= link_to 'Favorite me!', {:controller => "favorites",
                     :action => "create",
                     :user_id => current_user.id,
                     :gif_id => gif.id},
                     :method => "post" %><p>
    <% else %>
    <p>Already a favorite!</p>
    <% end %><hr>
<% end %>
